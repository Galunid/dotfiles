[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP1

format-charging-margin = 2
format-charging-padding = 2
format-charging-underline = #0000ff

label-charging =  %percentage%
format-charging = <label-charging>

format-discharging-margin = 2
format-discharging-padding = 2
format-discharging-underline = #ffff00

label-discharging =  %percentage%%
format-discharging = <label-discharging>

format-full-margin = 2
format-full-padding = 2
format-full-prefix = ""
format-full-underline = #33cc33
format-full-prefix-foreground = #707880

label-full = FULL
format-full = <label-full>

poll-interval = 5

[module/powermenu]
type = custom/menu

expand-right = false

format-margin = 2
format-spacing = 2

label-open = 
label-close = 
label-separator = |

; reboot
menu-0-1 = 
menu-0-1-exec = menu-open-2
; poweroff
menu-0-2 = 
menu-0-2-exec = menu-open-3
; logout
menu-0-0 = 
menu-0-0-exec = menu-open-1

menu-2-0 = 
menu-2-0-exec = reboot

menu-3-0 = 
menu-3-0-exec = poweroff

menu-1-0 = 
menu-1-0-exec = i3-msg exit || openbox --exit

[module/spotify]
type = custom/script
format-margin = 2
format-padding = 2
format-underline = #55ff55
;label-maxen = 10
width = 10
label = %output:40%
label-maxlen = 40
format =   <label>
exec = playerctl metadata --format '{{artist}}: {{title}}'
tail = true
interval = 1
click-left = "playerctl play-pause"

