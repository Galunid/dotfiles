[module/updates]
type=custom/script
exec = yay -Qu | wc -l
exec-if = [[ $(yay -Qu | wc -l) != 0 ]]
format =   <label> update(s) available.
format-margin = 2
tail = true
interval = 30
click-left = urxvt -e yay -Syu

[module/xwindow]
type = internal/xwindow
label = %title:40%
label-maxlen = 40
label-empty = Empty 
label-empty-font = 2
label-font = 2
format-margin = 2

[module/i3]
type = internal/i3
format = <label-state><label-mode>
format-margin = 2
index-sort = true

enable-click = true
reverse-scroll = false

label-focused = %index:2%
label-focused-underline = ${colors.foreground}
label-focused-padding = 2
;label-focused-font = 2

label-unfocused = %index:2%
label-unfocused-padding = 2

;label-urgent = !
;label-urgent-padding = 5
;label-urgent-underline = ${colors.background}
;label-urgent-font = 2

;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-9 = 10;
;ws-icon-default = 

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected =  <label-connected>
label-connected = %essid%
label-connected-color1 = ${colors.color1}

format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected
label-disconnected-color1 = ${colors.color1}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-color1 = ${colors.color1}

[module/time]
type = internal/date
interval = 10
format-margin = 2

time = "%H:%M"
date = "%d %b"

label = %time% | %date%
label-background = ${colors.background}
format-padding = 2

[module/sink]
type = custom/script

format-padding = 2
format-margin = 2
format-underline = #ff0000

format = <label>
exec = bash ~/.config/polybar/scripts/change_sink.sh show

click-left = bash ~/.config/polybar/scripts/change_sink.sh change

interval = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume-margin = 2
format-volume-underline = #ff0000
format-volume = <ramp-volume><label-volume>
label-volume = %percentage:3:3%%
format-volume-background = ${colors.background}
format-volume-padding = 2
use-ui-max = false
interval = 5

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

label-muted = "    "  
format-muted-margin = 2
format-muted-underline = #ff0000 
label-muted-background = ${colors.background}
label-muted-padding = 2

[module/mic-volume]
type = custom/script

format-margin = 2
format-padding = 2
format-underline = #ff0000

format = <label>
exec = bash ~/.config/polybar/scripts/mic.sh show-vol

click-left = bash ~/.config/polybar/scripts/mic.sh mute-vol
scroll-up = bash  ~/.config/polybar/scripts/mic.sh inc-vol 
scroll-down = bash ~/.config/polybar/scripts/mic.sh dec-vol 

interval = 1

[module/temperature]
type = internal/temperature
